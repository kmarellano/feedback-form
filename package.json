  "description": "A simple API for collecting and viewing expressions of interest for Brighte Eats.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "tsx dist/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
